=render :partial => "utils/settings_nav_bar", :locals => {:selected => :preference}
.row
  .span4.columns
    .user_profile
      %pre.prettyprint
        %img{:src => gravtastic(current_user.email,150), :id => "wavatar", :style => "padding-left:15px;"}
      .twipsy.below.avatar-twipsy
        .twipsy-arrow
        .twipsy-inner
          We love gravatar and we use it to show your avatar. Checkout 
          %a(href="http://gravatar.com" target="_blank") gravatar.com
          to change your avatar.

  .span12.columns
    -if current_user.preference.new_record?
      .page-header
        %h3
          Please complete your preference before you continue. 
      =render :partial => "new", :locals => {:method => :post, :url => "/preferences"}
    -else
      =render :partial => "new", :locals => {:method => :post , :url => "/preferences/update"}

